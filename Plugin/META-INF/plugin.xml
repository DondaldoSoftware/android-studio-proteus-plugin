<idea-plugin version="2">
    <id>com.flipkart.android.proteus</id>
    <name>XML to JSON converter for Proteus</name>
    <version>1.1</version>
    <vendor email="kiran.kumar@flipkart.com" url="http://www.flipkart.com">https://flipkart.com</vendor>
    <vendor email="aditya.sharat@flipkart.com" url="http://www.flipkart.com">https://flipkart.com</vendor>

    <description>
        <![CDATA[Convert XML Layout to JSON Layout]]>
    </description>

    <change-notes>
        <![CDATA[ Fixes error in new Android studios version]]>
    </change-notes>

    <idea-version since-build="131"/>

    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="proteusLayoutConverter"
                class="action.ConvertToJsonAction"
                text="Convert XML to JSON"
                description="Convert XML to JSON">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>