<idea-plugin version="2">
  <id>com.flipkart.layoutengine</id>
  <name>XML to JSON converter for Layout Engine Library</name>
  <version>1.0</version>
  <vendor email="kiran.kumar@flipkart.com" url="http://www.flipkart.com">Flipkart.com</vendor>

  <description><![CDATA[
      One click convert XML to JSON using layout engine and generate preview.
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products -->
  <depends>org.jetbrains.android</depends>


  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="layoutEngineConvert" class="action.ConvertToJsonAction" text="Convert XML to JSON"
              description="Convert XML to JSON using layout engine">
          <add-to-group group-id="ToolsMenu" anchor="first"/>
      </action>
  </actions>

</idea-plugin>